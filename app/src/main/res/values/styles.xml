<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NoToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LogSignEdtTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_size</item>
        <item name="android:padding">@dimen/normal_size</item>
        <item name="android:textColorHint">@color/edt_hint_color</item>
        <item name="android:background">@drawable/bg_edt</item>
        <item name="android:layout_marginStart">@dimen/padding_size</item>
        <item name="android:layout_marginEnd">@dimen/padding_size</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="LogSignBtnTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_size</item>
        <item name="android:layout_marginStart">@dimen/padding_size</item>
        <item name="android:layout_marginEnd">@dimen/padding_size</item>
    </style>

    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/dim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/dim_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/dim_in</item>
        <item name="android:activityCloseExitAnimation">@anim/dim_out</item>
    </style>

    <style name="ProductDetailTheme">
        <item name="android:layout_marginStart">@dimen/medium_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_size</item>
        <item name="android:layout_marginTop">@dimen/normal_size</item>
    </style>

    <style name="CheckOutLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_size</item>
        <item name="android:padding">@dimen/normal_size</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_edt</item>
    </style>

</resources>
