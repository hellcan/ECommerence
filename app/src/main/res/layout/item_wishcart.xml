<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_size"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wish_item_pic"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wish_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_size"
                    android:text="@string/example" />

                <TextView
                    android:id="@+id/wish_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_size"
                    android:text="123" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/remove_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="@dimen/normal_size"
                android:paddingBottom="@dimen/normal_size"
                android:paddingStart="@dimen/medium_size"
                android:paddingEnd="@dimen/medium_size"
                android:background="@null"
                android:src="@drawable/ic_like_un"
                android:layout_margin="@dimen/small_size" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray0" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>