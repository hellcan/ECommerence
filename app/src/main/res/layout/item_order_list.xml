<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_size"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingStart="@dimen/small_size"
                android:paddingEnd="@dimen/small_size"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/his_id_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_size"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_history"
                        android:drawablePadding="@dimen/small_size"
                        android:text="@string/example" />

                    <TextView
                        android:id="@+id/his_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/small_size"
                        android:drawableStart="@drawable/ic_timessvg"
                        android:layout_marginTop="@dimen/normal_size"
                        android:padding="@dimen/small_size"
                        android:text="@string/example" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/his_price_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_size"
                        android:text="@string/example" />

                    <TextView
                        android:id="@+id/his_status_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal_size"
                        android:padding="@dimen/small_size"
                        android:background="@color/bt_error_red"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:text="@string/example" />
                </LinearLayout>

            </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>